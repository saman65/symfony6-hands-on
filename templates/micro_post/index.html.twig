{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block body %}
<div class='grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4'>
    {% if posts|length > 0 %}
        {% for post in posts %}
            <div class='mb-4'><div class='text-xl'><a href="{{path('app-micro-post-show', {post: post.id})}}">{{ post.title }}</a></div></div>
            {#post: is used to pass post.id to the Route (parameterName: parameterValue).
            In fact there is {post} in the link of the Route and we need to write post: here if we want to pass post.id to it#}
            <div class='text-md dark:text-gray-400'>{{ post.text }}</div>
            <div class='text-gray-500 dark:text-gray-400'>{{ post.created | date('M j, Y') }}</div>
            <a href='#'>Like<span class='px-2 rounded-md bg-gray-200 dark:bg-gray-700'>0</span>
            </a>
            <div class='text-sm text-gray-500 dark:text-gray-400'>
                <a href='#'>user@mail.com</a>
            </div>
            <div><a href='{{ path('app_micro_post_edit', {post: post.id}) }}'>Edit Post</a></div>
        {% endfor %}
    {% else %}
        There is nothing here!
    {% endif %}
</div>
{% endblock %}
